
@{
    ViewBag.Title = "Invite";
}

<h2>Bulk Invite</h2>

@using (Html.BeginForm("BulkInvite", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-xs-12">

            <h3>Email addresses (one per line)</h3>

            @Html.TextArea("EmailAddresses", new { @class = "form-control", rows = "12" })

            <div class="form-group">
                <div class="col-xs-12">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("UserIsAgency", true) Set these users up as an Agency?
                        </label>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-xs-12">
                    <input type="submit" class="btn btn-default" value="Invite" />
                </div>
            </div>

        </div>
    </div>
}

